<div class="row">
  <div class="col-sm-3">
    <img src="<%= @movie.poster_url %>" class="img-thumbnail">
    <h4><%= @movie.title %></h4>
    <small>
      <li><a href="http://www.themoviedb.org/movie/<%= @movie.moviedb_id %>">TheMovieDB</a></li>
      <li><a href="http://www.csicon.net/mo<%= @movie.episode %>">Episode #<%= @movie.episode %> on CSICON</a></li>
    </small>
  </div>

  <div class="col-sm-9">
    <table class="table table-hover">
      <% @actors.each do |actor| %>
      <tr>
        <td><a href="/person/<%= actor.moviedb_id %>"><%= actor.name %> (<%= actor[:job] %>)</a></td>
      </tr>
    <% end %></table>
  </div>
</div>
