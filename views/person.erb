<div class="row">
  <div class="col-sm-3">
    <img src="<%= @person.profile_url %>" class="img-thumbnail">
    <h4><%= @person.name %></h4>
    <small><li><a href="http://www.themoviedb.org/person/<%= @person.moviedb_id %>">TheMovieDB</a></li></small>
  </div>

  <div class="col-sm-9">
    <table class="table table-hover">
      <% @movies.each do |movie| %>
      <tr>
        <td>Episode <%= movie.episode %>: <a href="/movie/<%= movie.moviedb_id %>"><em><%= movie.title %></em></a> (<%= movie.year %>) (<%= movie[:job] %>)</td>
      </tr>
    <% end %></table>
  </div>
</div>
