<h4><%= @header %></h4>
  <table class="table table-hover">
    <tr>
  	<td><strong>Person</strong></td>
  	<td><strong>Movies</strong></td>
  	<td><strong>Amount</strong></td>
  </tr>
  <% Array(@people.sort.reverse).each do |count, hash| %>
  <tr><% hash.each do |array| %>
    <td><%= array[:name] %></td>
    <td><em><%= array[:movies] %></em></td>
    <td><%= count %></td>
  </tr><% end %>
<% end %></table>