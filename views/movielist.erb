<h4><%= @header %></h4>
<table class="table table-hover">
  <tr>
    <td><strong>Poster</strong></td>
    <td><strong>Title</strong></td>
  </tr>
<% @movies.each do |movie| %>
  <tr>
    <td><img src="<%= movie.poster_url %>" width="50"></td>
    <td><h4><a href="/movie/<%= movie.moviedb_id %>"><em><%= movie.title %></em></a></h4></td>
  </tr>
<% end %>
</table>
